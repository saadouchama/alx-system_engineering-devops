# HAProxy config file for ssl termination on LB side
global
	log /dev/log	local0
	log /dev/log	local1 notice
	chroot /var/lib/haproxy
	stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
	stats timeout 30s
	user haproxy
	group haproxy
	daemon

	maxconn 2048
	tune.ssl.default-dh-param 2048

	ca-base /etc/haproxy/certs
	crt-base /etc/ssl/private

	ssl-default-bind-ciphers ECDH+AESGCM:DH+AESGCM:ECDH+AES256:DH+AES256:ECDH+AES128:DH+AES:RSA+AESGCM:RSA+AES:!aNULL:!MD5:!DSS
	ssl-default-bind-options no-sslv3

defaults
	log	global
	mode	http
	option	httplog
	option	dontlognull

	option forwardfor

	option http-server-close
        timeout connect 5000
        timeout client  50000
        timeout server  50000
	errorfile 400 /etc/haproxy/errors/400.http
	errorfile 403 /etc/haproxy/errors/403.http
	errorfile 408 /etc/haproxy/errors/408.http
	errorfile 500 /etc/haproxy/errors/500.http
	errorfile 502 /etc/haproxy/errors/502.http
	errorfile 503 /etc/haproxy/errors/503.http
	errorfile 504 /etc/haproxy/errors/504.http

frontend www-frontend
	bind *:80
	reqadd X-Forwarded-Proto:\ http
	# if configuration for certbot pass to certbot backend
	acl letsencrypt-acl path_beg /.well-known/acme-challenge/
	use_backend le-certbot-backend if letsencrypt-acl

	default_backend www-backend

frontend www-https-frontend
	bind *:443 ssl crt /etc/haproxy/certs/bennettdixon.online.pem
	reqadd X-Forwarded-Proto:\ https
	default_backend www-backend

backend le-certbot-backend
	server letsencrypt 127.0.0.1:8888

backend www-backend
        balance roundrobin
        server 378816-web-01 34.224.16.47:80
        server 378816-web-02 3.84.161.85:80
